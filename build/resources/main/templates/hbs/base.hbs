{{#block "header"}}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{#block "title"}}SparkBlog{{/block}}</title>
    <link href='https://fonts.googleapis.com/css?family=Noto+Serif:400,400italic,700|Noto+Sans:700,400' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/site.css">
    <script type="text/javascript" src="jquery-1.8.3.js"></script>
</head>
<body>
<header>
    <div class="container">
        <div class="site-header">
            <a class="logo" href="/index">SPARKBLOG</a>
            {{#if username}}
                <p class="welcome-banner">Welcome, {{username}}! <a href="/" onclick="signOut()">Sign out</a></p>
                <script>
                    function signOut() {
                        document.cookie = "username=; expires=Thu, 01 Jan 1970 00:00:00 UTC";
                    }
                </script>
            {{else}} <p class="welcome-banner"><a href="/log-in">Log in</a></p>
            {{/if}}
            {{#block "create-button"}}<a class="new-entry button button-round" href="/new" title="New Entry"><i class="material-icons">create</i></a>{{/block}}
        </div>
    </div>
</header>
<section>
    <div class="container page">
    {{#if flashMessage}}
        <p class="flash-message">{{flashMessage}}</p>
    {{/if}}
{{/block}}
{{#block "content"}}
{{/block}}
{{#block "footer"}}
    </div>
</section>
<footer>
    <div>
        <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
        <a href="#">Terms</a>
    </div>
</footer>
</body>
</html>
{{/block}}